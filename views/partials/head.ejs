<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<title>D&D IO</title>
<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  h1 {
    border-bottom: solid 1px gray;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    padding: 20px
  }

  body {
    font: 13px Helvetica, Arial;
  }

  section {}

  section article#chatbox {
    max-width: 350px;
    width: 100%;
    position: relative;
    box-sizing: border-box;
    border: solid 1px gray;
    display: block;
    height: 250px;
    margin: 20px auto;
  }

  section article#signinDiv {
    width: 320px;
    margin: 20px auto;
    display: block;
    height: auto;
    overflow: hidden;
  }

  section article#signinDiv form {}

  section article#signinDiv form input[type="password"],
  section article#signinDiv form input[type="text"] {
    width: 100%;
    padding: 10px;
    margin: 0 0 10px 0;
    box-sizing: border-box;
    border: solid 1px gray;
  }

  section article#signinDiv form input[type="submit"],
  section article#signinDiv form button {
    padding: 5px;
    border: solid 1px gray;
    float: right;
    margin: 0 0 0 10px;
  }

  form#chatter {
    background: #000;
    padding: 3px;
    position: absolute;
    bottom: 0;
    width: 100%;
  }

  form#chatter input {
    border: 0;
    padding: 10px;
    width: calc(100% - 50px);
  }

  form#chatter button {
    width: 50px;
    background: rgb(130, 224, 255);
    border: none;
    padding: 10px;
    cursor: pointer;
  }

  p#usersConnected {
    display: none;
  }

  #messages {
    list-style-type: none;
    margin: 0;
    padding: 0;
    overflow-y: scroll;
    height: 207px;
  }

  #messages li {
    padding: 5px 10px;
  }

  #messages li:nth-child(odd) {
    background: #eee;
  }

  #messages li b {
    font-size: 90%;
  }
</style>
<script src="https://code.jquery.com/jquery-1.11.1.js"></script>
